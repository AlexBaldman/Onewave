<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp">

    <RelativeLayout
        android:id="@+id/speedGauge"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/shadow"
        android:elevation="15dp"
        android:padding="4dp">


        <ImageView
            android:id="@+id/speedGaugeBackW"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@android:color/white" />

        <TextView
            android:id="@+id/speedTextW"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_marginBottom="15dp"
            android:layout_alignParentTop="true"
            android:textColor="@android:color/black"
            android:text="0"
            android:textSize="40dp"
            android:autoSizeTextType="uniform"
            android:autoSizeMaxTextSize="9001dp"
            android:autoSizeStepGranularity="2dp"/>

        <TextView
            android:id="@+id/speedUnitTextW"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_alignParentBottom="true"
            android:textColor="@android:color/black"
            android:text="@string/mph"
            android:textSize="12dp"/>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:onClick="showPopupText">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_color"
            android:layout_margin="8dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:textColor="?colorOnSurface"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/add_button_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/black"
            android:layout_margin="8dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:textColor="?attr/colorAccent"
            android:textSize="18sp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:onClick="showPopupBack">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/background_color"
            android:layout_margin="8dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:textColor="?colorOnSurface"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/add_button_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/white"
            android:layout_margin="8dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:textColor="?attr/colorAccent"
            android:textSize="18sp"/>

    </RelativeLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/add_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="@string/add_widget" />



</LinearLayout>